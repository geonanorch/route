{
  "name": "@riotjs/route",
  "version": "5.2.2",
  "description": "Riot.js isomorphic router",
  "main": "route.js",
  "jsnext:main": "route.esm.js",
  "module": "route.esm.js",
  "scripts": {
    "prepublishOnly": "npm run build && npm test",
    "lint": "eslint src test rollup.config.js",
    "build": "npm run build-umd && npm run build-esm && npm run build-demo",
    "build-umd": "rollup -c -f umd -n route -e riot -o route.js",
    "build-esm": "rollup -c -e riot -f esm -o route.esm.js",
    "build-demo": "riot demos/components -o demos/components",
    "demo": "npm run build && serve",
    "cov": "nyc report --reporter=text-lcov | coveralls",
    "cov-html": "nyc report --reporter=html",
    "test": "npm run lint && nyc mocha -r esm -r test/setup.js test/*.spec.js"
  },
  "files": [
    "route.js",
    "route.esm.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/riot/route.git"
  },
  "keywords": [
    "riot",
    "Riot.js",
    "router",
    "riot-route",
    "route"
  ],
  "author": "Gianluca Guarini <gianluca.guarini@gmail.com> (http://gianlucaguarini.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/riot/route/issues"
  },
  "homepage": "https://github.com/riot/route#readme",
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.8.6",
    "@riotjs/babel-preset": "^1.0.0",
    "@riotjs/cli": "^4.0.3",
    "@riotjs/compiler": "^4.7.0",
    "@riotjs/ssr": "^4.2.0",
    "bianco.query": "^1.0.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-riot": "^3.0.0",
    "esm": "^3.2.25",
    "jsdom": "16.2.0",
    "jsdom-global": "3.0.2",
    "mocha": "^7.1.0",
    "nyc": "^15.0.0",
    "riot": "^4.10.1",
    "rollup": "^1.32.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-riot": "^4.0.0",
    "serve": "^11.3.0",
    "sinon": "^9.0.0",
    "sinon-chai": "^3.5.0"
  },
  "peerDependency": {
    "riot": "^4.10.1"
  },
  "dependencies": {
    "@riotjs/util": "^1.2.0",
    "bianco.attr": "^1.0.0",
    "bianco.events": "^1.0.0",
    "cumpa": "^1.0.1",
    "rawth": "^1.0.1"
  }
}
